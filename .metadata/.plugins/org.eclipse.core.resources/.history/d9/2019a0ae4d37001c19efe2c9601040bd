import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.Color;
import java.awt.Graphics2D;

import javax.swing.Timer;


public class Kugelfall extends StandardAnwendung implements ActionListener{

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		starteAnwendung();
	}
	
	private int fallpos = 10;
	private double a = 9.81;

	public Kugelfall() {
		super("titel", 500, 500);
		this.setBackground(Color.BLACK);
		Timer frame = new Timer(40, this);
		frame.start();
	}
	
	@Override
	public void zeichne(Graphics2D g) {
		g.setColor(Color.GREEN);
		g.fillOval(50, fallpos, 40, 40);
		
	}
	
	@Override
	public void actionPerformed(ActionEvent arg0) {
		fallpos = (int) (a * 0.04 + fallpos);
		this.repaint();
		System.out.println(fallpos);
	}
}
